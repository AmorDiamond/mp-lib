/* region-picker.wxss */
.free-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);
  display: none;
}
.free-dialog__container {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
  border-radius: 10px 10px 0 0; 
  overflow: hidden;
}
.free-dialog--show .free-dialog__container {
  transform: translateY(0);
}
.free-dialog--show .free-dialog__mask {
  display: block;
}
.free-dialog__container__header {
  font-size:14px;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(74,74,74,1);
  padding: 24rpx 30rpx;
  text-align: center;
  background: white;
}
.free-dialog__container__header .close {
  position:absolute;
  right:30rpx;
  top:31rpx;
  width:36rpx;
  height:36rpx;
}
.free-content {
  background: white;
  border-bottom: 40rpx solid white;
  padding: 0 14px;
}
.free-content.ipx {
  border-bottom: 72rpx solid white;
}
.free-content__tabs{
  border-bottom: 1px solid #F1F1F1;
}
.free-content__tabs__tab {
  display: inline-block;
  padding: 12rpx 0rpx;
  margin: 0 20px 0 0;
  font-size: 13px;
  color:rgba(147,111,56,1);
  border-bottom: 3px solid white;
}
.free-content__tabs__tab.select {
  border-color: rgba(147,111,56,1);
}
.free-content__scroll {
  padding: 0;
  height: 480rpx;
  box-sizing: border-box;
  padding-top: 10px;
}
.free-content__scroll__item {
  height: 30px;
  line-height: 30px;
  font-size:12px;
  color: #333;
}