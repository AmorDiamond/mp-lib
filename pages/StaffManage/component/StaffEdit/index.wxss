@import "../../../../style/iconfont/iconfont.wxss";
.edit-state-container .form-item {
  background-color: #fff;
  padding-left: 32rpx;
  line-height: 100rpx;
}
.edit-state-container .form-item label {
  color: #4A4A4A;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #DDDDDD;
}
.edit-state-container .form-item:last-child label {
  border-bottom: none;
}
.form-item text {
  width: 200rpx;
}
.form-item input,.form-item picker,.form-item.staff-role-con {
  flex: 1;
  line-height: 100rpx;
  height: 100rpx;
}
.hide{
  line-height: 100rpx;
  height: 100rpx;
  width: 200px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.form-item .placeholder {
  color: #a9a9a9;
}
.form-item picker,.form-item .staff-role-con {
  text-align: right;
}
.form-item picker .picker,.form-item .staff-role-con {
  padding-right: 76rpx;
}
.form-item .staff-role-con text {
  margin-left: 10rpx;
}
.form-item .staff-role, .form-item .staff-status {
  position: relative;
  z-index: 1;
}
.form-item .more-icon {
  position: absolute;
  right: 0;
  /* width: 32rpx;
  height: 32rpx; */
  margin: 0 32rpx 0 12rpx;
  z-index: -1;
  font-size: 40rpx;
  color: #4a4a4a;
}
.btn-area {
  position: absolute;
  width: 606rpx;
  line-height: 90rpx;
  left: 72rpx;
  bottom: 40rpx;
}
.btn-area button {
  background-color: #0861A6;
  color: #fff;
  border-radius: 4rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: normal;
  padding: 0;
  font-size: 32rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background-color: rgba(0,0,0,.3);
  z-index: 9;
  display: flex;
  justify-content: center;
  align-items: center;
}
.role-modal {
  width: 80%;
  min-height: 300rpx;
  background-color: #fff;
  padding:40rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
  box-shadow: #eee 0 2px 5px;
}
.value-class {
  flex: none !important;
}

checkbox .wx-checkbox-input {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
background: #0394F0;
border-color:#0394F0;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
width: 20rpx;
height: 20rpx;  
line-height: 20rpx;
text-align: center;
font-size: 22rpx;
color: #fff;
background: transparent;
transform: translate(-50%, -50%) scale(1);
-webkit-transform: translate(-50%, -50%) scale(1);
}
  


.checkbox{
  width: 100%;
  height: 45px;
  display: flex;
  padding: 0 16px;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  color: #4A4A4A;
  font-size: 30rpx;
}
