/* pages/Myquota/quotaUsageList/index.wxss */

.active-tabs{
  color: #0969AD !important;
}

.weaper-boxes{
  width:375px;
  height:272px;
  background:rgba(255,255,255,1);
}
.weaper-for{
  width: 100%;
  height: 290px;
  display: flex;
  align-items: flex-end;
}

.felx-title{
  display: flex;
  height: 40px;
  width: 100%;
  justify-content: space-between;
  padding:0 16px;
  align-items: center;
  border-bottom: 1px solid #dddddd;
  box-sizing: border-box;
}
.status-color{
  font-size: 15px;
  color: #63B20D;
}
.bianh-color{
  font-size: 15px;
  font-weight: 500;
  color: #4A4A4A;
}

.content-weap{
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-bottom: 1px solid #dddddd;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 15px;
  color: #4A4A4A;
}

.weap-flex{
  display: flex;
  justify-content: space-between;
  font-weight: bold;
}

.button-btn{
   height: 59px;
   display: flex;
   justify-content: flex-end;
   align-items: center;
}

.btn-style{
  width:80px;
  height:36px;
  border-radius:4px;
  border:1px solid rgba(8,97,166,1);
  color: #0861A6;
  font-size: 14px;
  text-align: center;
  line-height: 36px;
  margin-right: 12px;
}

.footer-hei{
  width: 100%;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 20px;
}
.butn-color{
  width:303px;
  height:45px;
  background:rgba(8,97,166,1);
  border-radius:2px;
  color: white;
  font-size: 16px;
  text-align: center;
  line-height: 45px;
}

.heri{
  height: 75px;
}
.line-hei{
  height: 36px;
}
.line-hei-top{
  height: 45px;
  line-height: 45px;
}