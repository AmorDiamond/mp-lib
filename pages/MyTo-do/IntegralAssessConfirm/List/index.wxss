.integral-assess-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.page-hd {
  background-color: #fff;
}

.page-bd {
  flex: 1;
  overflow: hidden;
}
.page-bd scroll-view {
  height: 100%;
}
.search-area {
  display: flex;
  padding: 24rpx 32rpx;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}
.search-input {
  flex: 1;
  display: flex;
  height: 40px;
  align-items: center;
  border: 1rpx solid #DDDDDD;
  border-radius: 2px;
}
.search-input input {
  flex: 1;
}
.zoom-icon {
  width: 16px;
  height: 16px;
  padding: 10px;
}
.filter-icon {
  width: 24px;
  height: 24px;
  margin-left: 32rpx;
}
.input-placeholder{
  font-size: 14px;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: rgba(146,146,146,1);
}
.tabs {
  border-bottom: 1rpx solid #ddd;
}
.tabs .van-tabs__line {
  background-color: #0969AE;
}
.tabs .van-tab {
  color: #4A4A4A;
  font-size: 15px;
}
.tabs .van-tab--active {
  color: #0969AE;
}

.list-row {
  background-color: #fff;
  border-radius: 4px;
  padding: 32rpx 32rpx 24rpx;
  font-size: 14px;
  margin: 24rpx 32rpx;
}
.list-row .title {
  color: #2E2E2E;
  font-size: 15px;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-row .row-item {
  color: #929292;
  font-size: 13px;
  margin-bottom: 20rpx;
}
.list-row .foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.foot .more {
  display: flex;
  align-items: center;
}
.more text {
  color: #929292;
}
.more .iconfont {
  margin-left: 24rpx;
  line-height: 0;
}