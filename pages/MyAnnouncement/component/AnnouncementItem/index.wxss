@import "../../../../style/iconfont/iconfont.wxss";
.announce-item {
  padding: 30rpx 0 0 30rpx;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  margin-bottom: 24rpx;
  color: #929292;
}
.announce-info {
  flex: 1;
  padding-right: 30rpx;
  font-size: 24rpx;
}
.announce-info .title {
  font-size: 30rpx;
}
.announce-info .title.new {
  color: #f58d11;
}
.announce-info .time {
  margin: 10rpx 0;
}
.announce-info .content {
  color: #515151;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  /* word-wrap: break-word;
  white-space: normal !important; */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.announce-more {
  border-top: 2rpx solid #ddd;
  width: 100%;
  display: flex;
  height: 80rpx;
  align-items: center;
  margin-top: 32rpx;
  padding-right: 32rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.announce-more .more-text {
  flex: 1;
}
.announce-more .more-icon {
  font-size: 40rpx;
  color: #000;
}