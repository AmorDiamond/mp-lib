.scroll-area {
  padding: 0 32rpx;
}
.list-row {
  background-color: #fff;
  padding: 36rpx 32rpx 28rpx;
  font-size: 12px;
  color: #4A4A4A;
  margin-bottom: 24rpx;
  border-radius: 4px;
}
.list-row .title {
  font-size: 14px;
  color: #2E2E2E;
  margin-bottom: 30rpx;
}
.list-row .row-th, .list-row .row-tr {
  display: flex;
  justify-content: space-between;
  line-height: 72rpx;
  padding: 0 20rpx;
}
.list-row .row-th {
  background-color: #F1F2F1;
}
.list-row .row-tr {
  border-bottom: 1rpx solid #ddd;
}