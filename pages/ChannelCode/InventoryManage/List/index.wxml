<view class="record-list-page">
  <view class="search-bar">
    <view class="search-wrap">
      <image src="../../../../img/sreach.png" class="sreachimg"></image>
      <input type="text" placeholder="请输入盘点单号查询" placeholder-class="palceColol" class="sreachinput" confirm-type="搜索" bind:blur="onSearchInputChange" bind:confirm="onSearchHandle" />
    </view>
    <image src="../../../../img/sxuan.png" class="filter-icon" bind:tap="onFilterOpenHandle"></image>
  </view>
  <view class="warehouse-list-content">
    <scroll-view scroll-y bind:scrolltolower="onScrollHandle" class="scroll-wrap">
      <block wx:if="{{list.length !== 0}}">
        <mp-list-row
          wx:for="{{list}}"
          wx:key="index"
          rowData="{{item}}"
          items="{{rowItems}}"
          title="{{rowTitle}}"
          bind:tap="onGotoDetail"
          data-code="{{item.code}}"
        />
        <mp-page-foot-tips wx:if="{{list && list.length !== 0}}" querying="{{querying}}" hasMore="{{hasMore}}" />
      </block>
      <block wx:else>
        <mp-nothing-page />
      </block>
      <view style="height: 130rpx"></view>
    </scroll-view>
  </view>

  <van-action-sheet
    show="{{ showSheet }}"
    actions="{{ sheetActions }}"
    bind:close="onCloseSheet"
    bind:select="onSelectAction"
    description="请选择方式"
  />
</view>

<!-- 底部按钮 -->
<view class="opt-btn primary footer" bind:tap="onStartInventory">开始盘点</view>

<!-- 筛选面板 -->
<mp-filter-drawer
  show="{{showFilter}}"
  conditions="{{conditions}}"
  bind:submitHandle="onSubmitHandle"
  bind:closeHandle="onFilterCloseHandle"
/>
