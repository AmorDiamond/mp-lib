@import '../../../../style/iconfont/iconfont.wxss';
.label-title {
  margin: 40rpx 0 36rpx 32rpx;
  font-size: 15px;
}
.required {
  color: #E02020;
  vertical-align: middle;
  margin-right: 4rpx;
}
.cell-text {
  margin-right: 10rpx;
}
.scroll-list {
  position: relative;
  background-color: #fff;
  margin-bottom: 140rpx;
}
.list-row {
  padding: 38rpx 0;
  margin-left: 48rpx;
  border-bottom: 1rpx solid #ebedf0;
  font-size: 15px;
}
.opt-btn {
  position: fixed;
  bottom: 40rpx;
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 10%;
  padding: 0;
}
.loading-area {
  position: absolute;
  top: 0;
  width: 100%;
  min-height: 530rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.loading {
  font-size: 24px;
  animation: loading 1s linear infinite;
}
.loading-text {
  font-size: 14px;
}

@keyframes loading {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}