  </view>

</view>

 <view class="botzwei"></view>
</scroll-view>

</view>




<!-- =========下面输入框 -->

  <view class="flexput" wx:if="{{status!=2}}">
    <image src="../../img/pen.png" class="penimg" bindtap="handelsend"></image>
    <textarea
     class="inptflex" 
     style="height:50px"
     placeholder="请输入回复内容" 
     placeholder-class="textpil" 
     confirm-type="send"
     cursor-spacing='16'
     bindconfirm="handelsend"
     show-confirm-bar="true"
     adjust-position="true"
     bindinput="inputValue"
     value="{{inputValue}}"
     />
  </view>

