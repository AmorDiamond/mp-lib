<!-- 经销商 -->
<scroll-view scroll-y  style="height:calc(100vh - {{navH==90?'500':'478'}}px)" scroll-into-view="{{tolast}}">
 <view  wx:for="{{feekbackList}}" wx:key="index" >

 <view wx:if="{{item.type==1}}">
    <view class="weaperbox"> 
        <view class="weaperimg">
          <view>
            <view class="keftext">{{item.type==1?item.sendName:'客服'}}</view>
            <view class="timesize">{{item.createdTime}}</view>
          </view>
          <image src="{{item.type==1?avarurl:'../../img/kefu.png'}}" class="kefuimg"></image>
        </view>
    </view>
    <view class="huih" id="{{'id'+item.id}}">{{item.message}}</view>

 </view>


 <!-- 客服 -->
  <view wx:else  >

   <view class="weaperimg">
    <image src="{{item.type==1?avarurl:'../../img/kefu.png'}}" class="kefuimg"></image>
    <view>
      <view class="kefleft">{{item.type==1?item.sendName:'客服'}}</view>
      <view class="timesize">{{item.createdTime}}</view>
    </view>
  </view>

  <!-- ======= -->
