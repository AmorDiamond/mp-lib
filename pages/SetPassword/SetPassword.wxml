<!--pages/SetPassword/SetPassword.wxml-->
 <form bindsubmit="formSubmit">
 <van-cell-group>
  <van-field
    value="{{ phonenum }}"
    type="number"
    name="phonenum"
    label="手机号"
    disabled
    placeholder="请输入手机号"
    bind:input="handelphone"
  />

  <van-field
    value="{{ code }}"
    name="code"
    label="验证码"
    placeholder="请输入验证码"
    use-button-slot
  >
   <view 
   slot="button" 
   class="butcode" 
   bindtap="handeltocode"
    wx:if="{{showtext}}"
     
    >获取验证码</view>
    <view 
     slot="button"
     class="butcode"
     bindtap="handeltocode"
      wx:if="{{showcode}}">{{countdown}}s</view>
  </van-field>


  <van-field
    value="{{ password }}"
    clearable
    label="设置密码"
    right-icon="info-o"
    name="password"
    type="password"
    placeholder="请设置登录密码"
    bind:click-icon="onClickIcon"
    right-icon-class="color"
  />


  <van-field
    value="{{ passwordAgin }}"
    type="password"
    name="passwordAgin"
    label="确认密码"
    placeholder="请确认登录密码"
  />
</van-cell-group>
 
  <view class="boxwth">
    <button formType="submit" class="butenok">确认</button>
  </view>

 </form>
